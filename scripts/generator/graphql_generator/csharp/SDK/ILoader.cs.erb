    /// interface which classes that will perform network communication must define
    /// </summary>
    public interface ILoader {
        /// <summary>
        /// Domain to a Shopify store
        /// </summary>
        string Domain {
            get;
        }

        /// <summary>
        /// Access token used to communicate with a Shopify store
        /// </summary>
        string AccessToken {
            get;
        }
        
