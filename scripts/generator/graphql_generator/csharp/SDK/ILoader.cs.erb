    public delegate void LoaderResponseHandler(string response, string error);

    /// <summary>
    /// An interface that must be defined by classes that will perform network communication.
    /// </summary>
    public interface ILoader {
        /// <summary>
        /// Domain of a Shopify store.
        /// </summary>
        string Domain {
            get;
        }

        /// <summary>
        /// Access token used to communicate with a Shopify store.
        /// </summary>
        string AccessToken {
            get;
        }

        /// <summary>
        /// Sends the GraphQL query to the GraphQL endpoint.
