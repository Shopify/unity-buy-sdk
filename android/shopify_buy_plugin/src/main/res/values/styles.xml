<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BuyTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorAccent">@android:color/holo_green_dark</item>
        <item name="colorControlHighlight">#65669900</item>
        <item name="colorPrimary">@color/color_primary</item>
    </style>

    <style name="BuyTheme.ShippingMethodDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@android:color/holo_green_dark</item>
        <item name="colorControlHighlight">#65669900</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Shopify.TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Shopify.TitleText.Inverse" parent="Shopify.TitleText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Shopify.SubTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Shopify.SubTitleText.Inverse" parent="Shopify.SubTitleText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Shopify.BodyText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Shopify.BodyText.Inverse" parent="Shopify.BodyText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="WalletDetailsHeaderTextAppearance" parent="Shopify.TitleText.Inverse">
    </style>

    <style name="WalletDetailsTextAppearance" parent="Shopify.SubTitleText.Inverse">
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="WalletDetailsButton" parent="Shopify.SubTitleText">
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>

</resources>
